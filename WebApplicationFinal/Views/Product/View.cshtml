@using WebApplicationFinal.Data.Models
@model IEnumerable<Product>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View</title>
</head>
<body>
    <h2>Все товары</h2>
    @{
        foreach (var car in Model)
        {
            <div>
                <h2>@car.Name</h2>
                <p>Цена: @car.price.ToString("c")</p>
            </div>
        }
    }
</body>
</html>
