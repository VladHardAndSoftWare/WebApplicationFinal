@model ShopCartViewModel
    <div class="container">
        <div class="container">
            @{ int sum = 0; }
            @foreach (var el in Model.ShopCart.listShopItems)
            {
                <div class="alert alet-warning mt-3">
                    <b>Товар:</b> @el.car.Name<br />
                    <b>Цена:</b> @el.car.price.ToString("c")<br />
                    <a class="btn btn-danger" asp-controller="ShopCart"
                       asp-action="RemoveFromCart" asp-route-id="@el.id">Удалить</a>
                </div>
               sum += el.car.price;
            }
            <hr />
            <b>Итог:</b> @sum<br />
            <a class="btn btn-danger" asp-controller="Order" asp-action="Checkout">Оплатить</a>
        </div>
