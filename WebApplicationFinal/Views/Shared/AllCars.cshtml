@model WebApplicationFinal.Data.Models.Product

    <div class="col-lg-4">
        <img class="img-thumbnail" style="height: 480px; object-fit: cover" src="@Model.img" alt="@Model.Name" />
        <h2>@Model.Name</h2>
        <p>@Model.shortDesc</p>
        <p>Цена: @Model.price.ToString("c")</p>
        <p>
            <a class="btn btn-warning btn-buy" asp-controller="ShopCart"
               asp-action="addToCart" asp-route-id="@Model.id">Добавить в корзину</a>
            <a class="btn btn-outline-secondary" asp-controller="Detail" asp-action="Index"
                asp-route-id="@Model.id">Подробнее</a>
        </p>
    </div>